# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_REGIONS=us-east-1,us-west-2

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ciem_db
POSTGRES_USER=ciem_user
POSTGRES_PASSWORD=change_me_in_production

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me_in_production

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Security
SECRET_KEY=generate_a_secure_random_key_here
JWT_SECRET=generate_another_secure_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Scanning Configuration
SCAN_INTERVAL_HOURS=24
MAX_CONCURRENT_REGIONS=3
ENABLE_AUTO_SCAN=False

# Risk Scoring Thresholds
RISK_CRITICAL_THRESHOLD=90
RISK_HIGH_THRESHOLD=70
RISK_MEDIUM_THRESHOLD=40

# Compliance Frameworks
ENABLE_CIS_BENCHMARK=True
ENABLE_NIST_FRAMEWORK=False
ENABLE_ISO27001=False

# Notifications (Optional)
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_TO=

# Feature Flags
ENABLE_CROSS_ACCOUNT=False
ENABLE_ANOMALY_DETECTION=False
ENABLE_AUTO_REMEDIATION=False
